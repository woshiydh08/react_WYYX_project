@import "../../common/stylus/mixins.styl"

.footer_guide { // footer
  top-border-1px(#e4e4e4);
  position: fixed;
  z-index: 100;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #fff;
  width: 100%;
  height: 1.3rem;
  display: flex;

  .guide_item {
    display: flex;
    flex: 1;
    text-align: center;
    flex-direction: column;
    align-items: center;
  // margin: 5px;
    color: #999999;

    &.on {
      color: red;

      .icon_home {
        background-position-y: -3.5rem !important;
      }

      .icon_classify {
        background-position-y: -1.75rem !important;
      }

      .icon_topic {
        background-position-y: -5.27rem !important;
      }

      .icon_shopcart {
        background-position-y: 0rem !important;
      }

      .icon_login {
        background-position-y: -7rem !important;
      }
    }

    span {
      font-size: 0.32rem;
      margin-bottom: 0.0266rem;

      .icon {
        margin-top: 0.02rem;
        display: block;
        width: 0.75rem;
        height: 0.75rem;
        background: url('./images/AppFooter.png') no-repeat;
        background-size: cover;

        &.icon_home {
          background-position-y: -4.4rem;
        }

        &.icon_classify {
          background-position-y: -2.66rem;
        }

        &.icon_topic {
          background-position-y: -6.25rem;
        }

        &.icon_shopcart {
          background-position-y: -0.88rem;
        }

        &.icon_login {
          background-position-y: -7.97rem;
        }
      }
    }
  }
}